font-family = "Berkeley Mono"

# native fullscreen is SOOOO slow (the animation kills me)
macos-non-native-fullscreen = true

fullscreen = true
keybind = shift+enter=text:\n

# Map CMD+number to F-keys for tab navigation in neovim
keybind = cmd+Digit1=text:\x1BOP
keybind = cmd+Digit2=text:\x1BOQ
keybind = cmd+Digit3=text:\x1BOR
keybind = cmd+Digit4=text:\x1BOS
keybind = cmd+Digit5=text:\x1B[15~
keybind = cmd+Digit6=text:\x1B[17~
keybind = cmd+Digit7=text:\x1B[18~
keybind = cmd+Digit8=text:\x1B[19~
keybind = cmd+Digit9=text:\x1B[20~
