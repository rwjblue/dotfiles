{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "properties": {
    "tmux": {
      "anyOf": [
        {
          "$ref": "#/definitions/Tmux"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "Command": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "Session": {
      "type": "object",
      "required": [
        "name",
        "windows"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "windows": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Window"
          }
        }
      }
    },
    "Tmux": {
      "type": "object",
      "required": [
        "sessions"
      ],
      "properties": {
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Session"
          }
        }
      }
    },
    "Window": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "command": {
          "anyOf": [
            {
              "$ref": "#/definitions/Command"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "path": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}